<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/Content/main.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">LMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/books">My Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users">Users</a>
                    </li>
                </ul>

                <form action="/books/search" method="GET" class="d-flex me-3">
                    <input type="text" class="form-control" placeholder="Enter Book Name" name="title" required>
                    <button type="submit" class="btn btn-light ms-2">Search</button>
                </form>

                <div class="d-flex">
                    <% if (typeof user !=='undefined' ) { %>
                        <span class="navbar-text text-light me-3">Welcome Back <%= user.name %></span>
                        <a href="/users/logout" class="btn btn-light me-2">Logout</a>
                        <% } else { %>
                            <a href="/users/login" class="btn btn-light me-2">Login</a>
                            <a href="/users/new" class="btn btn-warning">Register</a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>