<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Index Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container py-5">
        <div class="text-center mb-4">
            <h2 class="mb-3">All Registered Users</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <ul class="list-group">
                            <% users.forEach(user=> { %>
                                <% if (user.role !=='admin' ) { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <a href="/users/<%= user._id %>" class="text-decoration-none">
                                            <%= user.name %>
                                        </a>
                                        <div>
                                            <a href="/users/<%= user._id %>/edit"
                                                class="btn btn-sm btn-warning">Edit</a>
                                            <a href="/users/<%= user._id %>/delete"
                                                class="btn btn-sm btn-danger">Delete</a>
                                        </div>
                                    </li>
                                    <% } %>
                                        <% }); %>
                        </ul>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <a href="/" class="btn btn-secondary btn-lg me-2">Home</a>
                    <a href="/" class="btn btn-secondary btn-lg">Log out</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>