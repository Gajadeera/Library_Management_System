<%- include('../partials/header') %>
        <div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
                <div class="text-center">
                        <h2 class="mb-3">Welcome, <span style="text-transform: uppercase;">
                                        <%= user.name %>
                                </span> </h2>
                        <h4 class="text-muted">You are logged in as: <span class="text-primary">
                                        <%= user.role %>
                                </span></h4>
                </div>

                <div class="card mt-4 shadow-lg" style="max-width: 600px; width: 100%;">
                        <div class="card-body text-center">
                                <% if (user.role==='user' ) { %>
                                        <ul class="list-group list-group-flush">
                                                <li class="list-group-item"><a href="/books"
                                                                class="text-decoration-none">Browse Books</a>
                                                </li>
                                                <li class="list-group-item"><a href="/borrowRequest"
                                                                class="text-decoration-none">Request to
                                                                Borrow a Book</a></li>
                                        </ul>
                                        <% } else if (user.role==='admin' ) { %>
                                                <ul class="list-group list-group-flush">
                                                        <li class="list-group-item"><a href="/users"
                                                                        class="text-decoration-none">Manage
                                                                        Users</a></li>
                                                        <li class="list-group-item"><a href="/viewReports"
                                                                        class="text-decoration-none">View
                                                                        Reports</a></li>
                                                        <li class="list-group-item"><a href="/manageBooks"
                                                                        class="text-decoration-none">Manage
                                                                        Library Inventory</a></li>
                                                </ul>
                                                <% } else if (user.role==='superAdmin' ) { %>
                                                        <ul class="list-group list-group-flush">
                                                                <li class="list-group-item"><a
                                                                                href="../admin/createAdmin"
                                                                                class="text-decoration-none">Add
                                                                                Admin</a></li>
                                                                <li class="list-group-item"><a href="/users/new"
                                                                                class="text-decoration-none">Add
                                                                                Users</a></li>
                                                                <li class="list-group-item"><a href="/users"
                                                                                class="text-decoration-none">Manage
                                                                                Users</a></li>
                                                                <li class="list-group-item"><a href="/report"
                                                                                class="text-decoration-none">View
                                                                                Reports</a></li>
                                                                <li class="list-group-item"><a href="/manageBooks"
                                                                                class="text-decoration-none">Manage
                                                                                Library Inventory</a></li>
                                                        </ul>
                                                        <% } else if (user.role==='librarian' ) { %>
                                                                <ul class="list-group list-group-flush">
                                                                        <li class="list-group-item"><a
                                                                                        href="../books/add"
                                                                                        class="text-decoration-none">Add
                                                                                        New
                                                                                        Book</a></li>
                                                                        <li class="list-group-item"><a
                                                                                        href="../books/Update"
                                                                                        class="text-decoration-none">Update
                                                                                        the Book</a></li>
                                                                        <li class="list-group-item"><a
                                                                                        href="../books/delete"
                                                                                        class="text-decoration-none">Delete
                                                                                        Book</a></li>
                                                                        <li class="list-group-item"><a
                                                                                        href="/approveRequests"
                                                                                        class="text-decoration-none">Approve/Deny
                                                                                        Borrow Requests</a></li>
                                                                        <li class="list-group-item"><a
                                                                                        href="/manageBooks"
                                                                                        class="text-decoration-none">Manage
                                                                                        Book Inventory</a></li>
                                                                        <li class="list-group-item"><a
                                                                                        href="/viewRequests"
                                                                                        class="text-decoration-none">View
                                                                                        All User Requests</a></li>
                                                                </ul>
                                                                <% } %>
                        </div>
                </div>

                <div class="mt-4">
                        <a href="/" class="btn btn-secondary btn-lg">Home</a>
                        <a href="/" class="btn btn-secondary btn-lg">Log out</a>
                </div>
        </div>

        <footer class="mt-auto">
                <%- include('../partials/footer') %>
        </footer>