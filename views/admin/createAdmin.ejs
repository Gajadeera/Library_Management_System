<%- include('../partials/header') %>
    <div class="container vh-100 d-flex flex-column justify-content-center align-items-center text-center">

        <div class="text-center">
            <h2 class="mb-3">Register</h2>
            <h4 class="text-muted">Please fill in the details below to Register</h4>
        </div>

        <div class="card mt-4 shadow-lg" style="max-width: 600px; width: 100%;">
            <div class="card-body">
                <form action="/users" method="post" class="form-inline">
                    <div class="mb-3 d-flex align-items-center">
                        <label for="name" class="form-label me-2">Name</label>
                        <input type="text" name="name" id="name" class="form-control"
                            placeholder="Enter the user's name" required>
                    </div>

                    <div class="mb-3 d-flex align-items-center">
                        <label for="email" class="form-label me-2">Email</label>
                        <input type="email" name="email" id="email" class="form-control"
                            placeholder="Enter the user's email" required>
                    </div>

                    <div class="mb-3 d-flex align-items-center">
                        <label for="password" class="form-label me-2">Password</label>
                        <input type="password" name="password" id="password" class="form-control"
                            placeholder="Enter the user's password" required>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <footer class="mt-auto">
        <%- include('../partials/footer') %>
    </footer>