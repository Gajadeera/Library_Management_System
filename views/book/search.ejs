<%- include('../partials/header') %>

    <div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
        <div class="text-center">
            <h2 class="mb-3 fw-bold">Book Details</h2>
        </div>

        <% if (book) { %>
            <div class="card shadow-sm border-0 mt-4" style="max-width: 500px; width: 100%;">
                <div class="card-body text-center">
                    <h4 class="fw-semibold">
                        <%= book.title %>
                    </h4>
                    <p class="text-muted mb-1">by <strong>
                            <%= book.author %>
                        </strong></p>

                    <% if (book.genre) { %>
                        <p class="text-muted">Genre: <%= book.genre %>
                        </p>
                        <% } %>

                            <% if (book.publishedYear) { %>
                                <p class="text-muted">Published: <%= book.publishedYear %>
                                </p>
                                <% } %>

                                    <% if (book.imageUrl) { %>
                                        <img src="<%= book.imageUrl %>" alt="Book Cover" class="img-fluid rounded mt-3"
                                            style="max-height: 250px;">
                                        <% } %>
                </div>
            </div>
            <% } else { %>
                <div class="alert alert-warning text-center mt-4" style="max-width: 500px; width: 100%;">
                    No book found. Try searching again.
                </div>
                <% } %>
    </div>

    <footer class="mt-auto">
        <%- include('../partials/footer') %>
    </footer>